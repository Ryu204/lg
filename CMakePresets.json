{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 27
    },
    "configurePresets" : [
        {
            "name": "base",
            "binaryDir": "build/base",
            "cacheVariables": {
            }
        },
        {
            "name": "check",
            "inherits": "base",
            "binaryDir": "build/check",
            "cacheVariables": {
                "stay_CLANG_TIDY": "ON",
                "CMAKE_CXX_CLANG_TIDY": "clang-tidy;--header-filter=${sourceDir}/source/*.hpp;--extra-arg=/EHsc"
            }
        }
    ]
}